{
  "id": "inf-regress-area-testsuite-heatmap",
  "author": "Ronak Shah",
  "service": "elasticsearch",
  "tabify": "expressHeatmap",
  "query": {
    "index": "nuage_regress",
    "type": "nuage_doc_type",
    "body": {
      "size": 0,
      "query": {
        "bool": {
          "must": [
            {
              "range": {
                "time_regression_started": {
                  "gte": "now-20d/d",
                  "lte": "now-1d/d",
                  "format": "epoch_millis"
                }
              }
            },
            {
              "regexp": {
                "version.vrs": "[0-9].[0-9]/[0-9.]+"
              }
            },
            {
              "regexp": {
                "version.vsd": "[0-9].[0-9]/[0-9.]+"
              }
            },
            {
              "regexp": {
                "version.vsc": "[0-9].[0-9]/[0-9ISBN.]+"
              }
            },
            {
              "term": {
                "testcase": ""
              }
            },
            {
              "term": {
                "project": "{{branch}}"
              }
            },
            {
              "terms": {
                "testsuite": [
                  "express",
                  "NsgExpress",
                  "DcExpress"
                ]
              }
            }
          ]
        }
      },
      "aggs": {
        "date_histo": {
          "date_histogram": {
            "field": "time_regression_started",
            "interval": "1d",
            "format": "epoch_millis",
            "time_zone": "America/Los_Angeles",
            "extended_bounds": {
              "min": "now-20d/d",
              "max": "now-1d/d"
            }
          },
          "aggs": {
            "project": {
              "terms": {
                "field": "project",
                "size": 10
              },
              "aggs": {
                "testsuite": {
                  "terms": {
                    "field": "testsuite"
                  },
                  "aggs": {
                    "build": {
                      "terms": {
                        "field": "build_number",
                        "size": 1,
                        "order": {
                          "_term": "desc"
                        }
                      },
                      "aggs": {
                        "result": {
                          "terms": {
                            "field": "result",
                            "size": 1,
                            "order": {
                              "_term": "desc"
                            }
                          },
                          "aggs": {
                            "time_regression_started": {
                              "terms": {
                                "field": "time_regression_started",
                                "size": 1,
                                "order": {
                                  "_term": "desc"
                                }
                              },
                              "aggs": {
                                "link": {
                                  "terms": {
                                    "field": "regression_link",
                                    "size": 1
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}