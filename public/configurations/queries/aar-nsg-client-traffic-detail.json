{
  "id": "aar-nsg-app-traffic-detail-area",
  "title": "NSG Application traffic detail",
  "service": "elasticsearch",
  "query": {
    "index": "{{index:nuage_dpi_flowstats}}",
    "type": "{{type:nuage_doc_type}}",
    "body": {
      "size": 0,
      "query": {
                "bool": {
                    "must": [
                        {
                            "range": {
                                "timestamp": {
                                    "gte": "{{startTime:now-24h}}",
                                    "lte": "{{endTime:now}}",
                                    "format": "epoch_millis"
                                }
                            }
                        },
                        {
                            "term": {
                                "IngressBytes": 0
                            }
                        },
                        {
                            "term": {
                                "SourceNSG": "{{snsg}}"
                            }
                        }
                    ]
                }
            },
      "aggs": {
        "ts": {
          "date_histogram": {
            "field": "timestamp",
            "interval": "1h"
          },
          "aggs": {
            "{{trafficType:DstIp}}": {
              "terms": {
                "field": "{{trafficType:DstIp}}",
                "size": 5,
                "order": {
                  "SumofBytes": "desc"
                }
              },
              "aggs": {
                "SumofBytes": {
                  "sum": {
                    "field": "TotalBytesCount"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}