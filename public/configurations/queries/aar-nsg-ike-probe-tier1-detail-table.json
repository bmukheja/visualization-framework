{
    "id": "aar-nsg-ike-probe-tier1-detail-table",
    "title": "IKE Tier1 URL state table",
    "service": "elasticsearch",
    "query": {
        "index": "{{index:nuage_ike_probestats}}",
        "type": "{{type:nuage_doc_type}}",
        "body": {
            "size": "1",
            "sort": [
                {
                    "timestamp": {
                        "order": "desc"
                    }
                }
            ],
            "query": {
                "bool": {
                    "filter": {
                        "bool": {
                            "must": [
                                {
                                    "range": {
                                        "timestamp": {
                                            "lte": "{{ike_probe_timestamp}}",
                                            "gte": "{{ike_probe_timestamp}}||-2m",
                                            "format": "epoch_millis"
                                        }
                                    }
                                },
                                {
                                    "term": {
                                        "SourceNSG": "{{snsg}}"
                                    }
                                },
                                {
                                    "term": {
                                        "TunnelName": "{{tunnel}}"
                                    }
                                }
                            ]
                        }
                    }
                }
            },
            "aggs": {
                "date_histo": {
                    "date_histogram": {
                        "field": "timestamp",
                        "interval": "2m"
                    },
                    "aggs": {
                        "urls": {
                            "terms": {
                                "field": "Tier1URLInfo.UrlString"
                            },
                            "aggs": {
                                "state": {
                                    "terms": {
                                        "field": "Tier1URLInfo.UrlState"
                                    },
                                    "aggs":{
                                        "failure":{
                                            "terms":{
                                                "field":"Tier1URLInfo.UrlFailureReason"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}