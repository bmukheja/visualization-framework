{
  "id": "inf-regress-aql-vcs-passfail",
  "title": "",
  "service": "elasticsearch",
  "tabify":"aqlPassFail",
  "query": {
    "index": "nuage_regress",
    "type": "nuage_doc_type",
    "body": {
      "size": 0,
      "query": {
        "bool": {
          "must": [
            {
              "range": {
                "time_regression_started": {
                  "gte": "{{startTime:now-1d}}",
                  "lte": "{{endTime:now}}",
                  "format": "epoch_millis"
                }
              }
            },
            {
              "regexp": {
                "aql_area": "(ipsec|routing|rg|aar|aql_underlay|ipv6|UI|qos|nsg_performance|oat_upgrade_mesh|platform_and_security_hardening|bootstrap_and_security)"
              }
            },
            {
              "wildcard": {
                "_id": "*@*"
              }
            },
            {
              "regexp": {
                "version.vrs": "[0-9].[0-9]/[0-9.]+"
              }
            },
            {
              "regexp": {
                "version.vsd": "[0-9].[0-9]/[0-9.]+"
              }
            },
            {
              "regexp": {
                "version.vsc": "[0-9].[0-9]/[0-9ISBN.]+"
              }
            },
            {
              "term": {
                "project": "{{branch}}"
              }
            }
          ]
        }
      },
      "aggs": {
        "regression_name": {
          "terms": {
            "field": "RegressionName",
            "size":1000
          },
          "aggs": {
            "results": {
              "terms": {
                "field": "result",
                "size": 1,
                "order": {
                  "_term": "desc"
                }
              },
              "aggs": {
                "result": {
                  "terms": {
                    "script": {
                      "inline": "doc['result'].value == 2? 'PASS':doc['result'].value==1?'FAIL':'SKIP'"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}