{
  "id": "inf-regress-aql-vcs-passfail",
  "title": "",
  "service": "elasticsearch",
  "tabify":"aqlPassFail",
  "query": {
    "index": "nuage_aql",
    "type": "nuage_doc_type",
    "body": {
      "size": 0,
      "query": {
        "bool": {
          "must": [
            {
              "range": {
                "timestamp": {
                  "gte": "{{startTime}}",
                  "lte": "{{endTime}}",
                  "format": "epoch_millis"
                }
              }
            },
            {
              "regexp": {
                "Area": "(dc_|wbx|vmware|contain).*"
              }
            },
            {
              "term":{
                "branch":"{{branch}}"
              }
            }
          ]
        }
      },
      "aggs": {
        "area": {
          "terms": {
            "field": "Area",
            "size":2000
          },
          "aggs": {
            "testsuite": {
              "terms": {
                "field": "RegressionName",
                "size": 800
              },
              "aggs": {
                "result": {
                  "terms": {
                    "script":{
                      "inline":"doc['pass'].value != 0 ? 2 : doc['fail'].value !=0?1:doc['skip'].value!=0?0:-1"
                    },
                    "exclude":"-1",
                    "size": 1,
                    "order": {
                      "_term": "desc"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}