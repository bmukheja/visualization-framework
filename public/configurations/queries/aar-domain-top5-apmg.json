{
    "id":"aar-domain-top5-apmg",
    "title":"TBD",
    "service":"elasticsearch",
    "query":{
        "index":"{{index:nuage_dpi_flowstats}}",
        "type":"{{type:nuage_doc_type}}",
        "body":{
            "size":0,
            "query":{
                "bool":{
                    "must":[
                        {
                            "range":{
                                "timestamp":{
                                    "gte":"{{startTime:now-24h}}",
                                    "lte":"{{endTimeTime:now}}",
                                    "format":"epoch_millis"
                                }
                            }
                        }
                    ]
                }
            },
            "aggs":{
                "3":{
                    "filters":{
                        "filters":{
                            "Enterprise":{
                                "query":{
                                    "term":{
                                        "EnterpriseName":"{{enterpriseName:test_org}}"
                                    }
                                }
                            }
                        }
                    },
                    "aggs":{
                        "4":{
                            "filters":{
                                "filters":{
                                    "Domain":{
                                        "query":{
                                            "term":{
                                                "{{domainType:Domain}}":"{{domainName:Domain1}}"
                                            }
                                        }
                                    }
                                }
                            },
                            "aggs":{
                                "Sum of MB":{
                                    "sum":{
                                        "field":"TotalMB"
                                     }
                                },
                                "APMGroup":{
                                    "terms":{
                                        "field":"APMGroup",
                                        "size":5,
                                        "order":{
                                            "Sum of MB":"desc"
                                        }
                                    },
                                    "aggs":{
                                        "Sum of MB":{
                                            "sum":{
                                                "field":"TotalMB"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
