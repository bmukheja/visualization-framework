{
    "id": "inf-regress-area-testsuite-heatmap",
    "service": "elasticsearch",
    "tabify": "areaHeatmap",
    "query": {
        "index": "nuage_regress",
        "type": "{{type:nuage_doc_type}}",
        "body": {
            "size": 0,
            "sort": [
                {
                    "time_regression_started": {
                        "order": "desc"
                    }
                }
            ],
            "query": {
                "bool": {
                    "must": [
                        {
                            "range": {
                                "time_regression_started": {
                                    "gte": "now-15d/d",
                                    "lte": "now-1d/d",
                                    "format": "epoch_millis"
                                }
                            }
                        },
                        {
                            "term": {
                                "aql_area": "{{testsuiteArea}}"
                            }
                        },
                        {
                            "wildcard": {
                                "_id": "*@*"
                            }
                        },
                        {
                            "regexp": {
                                "version.vrs": "[0-9].[0-9]/[0-9.]+"
                            }
                        },
                        {
                            "regexp": {
                                "version.vsd": "[0-9].[0-9]/[0-9.]+"
                            }
                        },
                        {
                            "regexp": {
                                "version.vsc": "[0-9].[0-9]/[0-9ISBN.]+"
                            }
                        },
                        {
                            "term": {
                                "project": "{{branch}}"
                            }
                        },
                        {
                            "term": {
                                "testcase": ""
                            }
                        }
                    ]
                }
            },
            "aggs": {
                "date_histo": {
                    "date_histogram": {
                        "field": "time_regression_started",
                        "interval": "1d",
                        "format": "epoch_millis",
                        "time_zone": "America/Los_Angeles",
                        "extended_bounds": {
                            "min": "now-15d/d",
                            "max": "now-1d/d"
                        }
                    },
                    "aggs": {
                        "regression_name": {
                            "terms": {
                                "field": "RegressionName",
                                "size": 100
                            },
                            "aggs": {
                                "testsuite": {
                                    "terms": {
                                        "field": "testsuite"
                                    },
                                    "aggs": {
                                        "build_number": {
                                            "terms": {
                                                "field": "build_number",
                                                "size": 1,
                                                "order": {
                                                    "_term": "desc"
                                                }
                                            },
                                            "aggs": {
                                                "result": {
                                                    "terms": {
                                                        "field": "result",
                                                        "size": 1,
                                                        "order": {
                                                            "_term": "desc"
                                                        }
                                                    },
                                                    "aggs": {
                                                        "time_regression_started": {
                                                            "terms": {
                                                                "field": "time_regression_started"
                                                            },
                                                            "aggs": {
                                                                "link": {
                                                                    "terms": {
                                                                        "field": "regression_link",
                                                                        "size": 1
                                                                    },
                                                                    "aggs": {
                                                                        "testbed": {
                                                                            "terms": {
                                                                                "field": "testbed"
                                                                            }
                                                                        }
                                                                    }
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}