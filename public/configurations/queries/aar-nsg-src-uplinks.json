{
    "id":"aar-nsg-src-uplinks",
    "title":"TBD",
    "service":"elasticsearch",
    "query":{
        "index":"{{index:nuage_dpi_probestats}}",
        "type":"{{type:nuage_doc_type}}",
        "body":{
            "size":0,
            "query":{
                "bool":{
                    "must":[
                        {
                            "range":{
                                "timestamp":{
                                    "gte":"{{startTime:now-24h}}",
                                    "lte":"{{endTime:now}}",
                                    "format":"epoch_millis"
                                }
                            }
                        },
                        {
                            "term": {
                                 "EnterpriseName": "{{enterpriseName:test_org}}"
                             }
                        },
                        {
                            "term": {
                                "SourceNSG": "{{snsg}}"
                            }
                        }
                    ]
                }
            },
            "aggs": {
                "srcUplink":{
                    "cardinality":{
                        "field": "SrcUplink"
                    }
                }
            }
        }
    }
}

